@model Song


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <img class="card-img-top" src="@Url.Content(Model.ImagePath)" alt="Single Image" asp-append-version="true" style="height:300px;width:auto"/>
        <h4>
            @Model.Artist -
            @Model.Name -
            @Model.MusicStyle
            <span class="badge badge-pill badge-primary" style="float:right">
                Rating:
                <small>@Model.Rating</small>
            </span>
            <span class="badge badge-pill badge-primary" style="float:right">
                Price:
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    @*Method is post - because GET is only if request is not cause change on database*@
    <form id="@Model.Id" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            Charts: @Model.Description - Country song: @Model.Country
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
    <form id="@Model.Id" asp-action="AddRating"
          asp-controller="Home" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit"
                class="btn btn-success btn-sm pull-right" style="float:right">
            Rate
        </button>
    </form>
</div>